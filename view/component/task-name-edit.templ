package component

import (
    "fmt"
    "github.com/francois-roseberry/go-todo-app/internal/task"
)

templ TaskNameEdit(t *task.Task) {
    <input name="task-name" type="text" placeholder={ t.Name } hx-put={ fmt.Sprintf("/tasks/%d", t.Id) } hx-trigger="keyup[keyCode==13]" hx-swap="outerHTML" autofocus />
}